<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tiarasabrina.tiarasabrina_1202150259_modul1.SecondActivity">

    <TextView
        android:id="@+id/makanMalam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/porsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pilihanMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:text="Porsi"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/porsiMakanan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Harga"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/totalMakanMalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/harga"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="TotalMakanMalam"
        android:textAlignment="center"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/pilihanMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="PilihanMenu"
        android:textAlignment="center"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/lokasiMakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/makanMalam"
        android:layout_centerHorizontal="true"
        android:text="LokasiMakan"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/porsiMakanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/pilihanMenu"
        android:layout_alignRight="@+id/pilihanMenu"
        android:layout_below="@+id/porsi"
        android:layout_marginTop="24dp"
        android:text="PorsiMakan"
        android:textAlignment="center"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lokasiMakan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Menu"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@android:color/holo_green_dark"
        android:textSize="18sp" />
</RelativeLayout>
